<% provide(:title, "Edit Student - PolyU FYP Management") %>
<div class="container">
    <h2 class="display-2" style="margin:1em 0 0.5em 0">Edit Student</h2>

    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@student) do |f| %>
        <%= render 'shared/error_messages', obj: @student %>

        <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :netID %>
        <%= f.email_field :netID, class: 'form-control', disabled: true %>
        </div>

        <div class="form-group">
        <%= f.label :department %>
        <%= f.select :department, @departments_list, {}, {class: "form-control", disabled: !is_admin?} %>
        </div>

        <div class="form-group">
        <%= f.label :fyp_year %>
        <%= f.select :fyp_year, @fyp_year_list, {}, {class: "form-control"} %>
        </div>
        <br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to "Back", '/students', {class: "btn btn-secondary"} %>
        <% end %>
    </div>
    </div>
</div>