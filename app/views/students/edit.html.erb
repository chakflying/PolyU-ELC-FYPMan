<% provide(:title, "Edit Student") %>
<div class="container">
  <h2 class="display-2" style="margin:1em 0 0.5em 0">Edit Student</h2>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@student) do |f| %>
        <%= render 'shared/error_messages', obj: @student %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :netID, "NetID" %>
          <%= f.text_field :netID, class: 'form-control', readonly: true %>
        </div>
        <div class="form-group">
          <%= f.label :department %>
          <% if is_admin? %>
            <%= f.select :department_id, @departments_list, {include_blank: true}, {class: "form-control"} %>
          <% else %>
            <%= f.select :department_id, @departments_list, {include_blank: true}, {class: "form-control", disabled: true} %>
            <%= f.hidden_field :department_id, value: current_user.department.id %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.label :fyp_year %>
          <%= f.select :fyp_year, @fyp_year_list, {}, {class: "form-control"} %>
        </div>
        <br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to "Back", '/students', {class: "btn btn-secondary"} %>
      <% end %>
    </div>
  </div>
</div>
