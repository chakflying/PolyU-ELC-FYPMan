<% provide(:title, "Log In") %>
<div class="container">
<div class="d-flex justify-content-center" style="padding-top:1.3em">
<%= image_tag "appicon.webp", height: 300 %>
</div>
<h2 class="display-2 text-center">Log In</h2>
<br>
<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <%= form_for(:session, url: login_path, html: {class: "needs-validation", novalidate: true}) do |f| %>
      <div class="form-group">
      <%= f.label "Username or email" %>
      <%= f.text_field :username, class: 'form-control', placeholder: "Enter username or email", 'aria-label': "Login username or email", required: true %>
      </div>
      
      <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: "password", required: true  %>
      <p><%= link_to "forgot password?", new_password_reset_path %></p>
      </div>
      <div class="row">
        <div class="col-lg-12" style="margin-bottom:1em">
        <%= f.submit "Log In", class: "btn btn-primary btn-lg col-sm-12" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
  </div>
</div>
<div id="hello"></div>
</div>

