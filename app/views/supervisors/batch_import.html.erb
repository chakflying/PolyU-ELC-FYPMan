<% provide(:title, 'Batch Import Supervisors - PolyU FYP Management') %>
<div class="container">
    <h2 class="display-2" style="margin:1em 0 0.5em 0">Batch Import Supervisors</h2>
    <%= form_for :supervisors_list, url: supervisors_batch_import_path do |f| %>
    <% if is_admin? %>
    <div class="form-group">
    <%= f.label :department, "Adding Supervisors to Department:" %>
    <%= f.select :department, @departments_list, {prompt: "Select Department:"}, {class: "form-control"} %>
    </div>
    <% else %>
    <%= f.hidden_field :department, value: current_user.department %>
    <% end %>

    <div class="row">
        <div class="form-group col-md-6">
        <%= f.label :netID_list, "List of netIDs:" %>
        <%= f.text_area :netID_list, {rows: 15, class: "form-control"} %>
        </div>
        <div class="form-group col-md-6">
        <%= f.label :name_list, "List of names:" %>
        <%= f.text_area :name_list, {rows: 15, class: "form-control"} %>
        </div>
    </div>
    <br>
    <%= f.submit "Create Supervisors", class: "btn btn-primary" %>
    <% end %>
</div>