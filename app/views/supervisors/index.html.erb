<% provide(:title, 'Manage Supervisors') %>
<div class="container">
  <h2 class="display-2" style="margin:1em 0 0.4em 0">Manage Supervisors</h2>
  <% if is_admin? %>
    <h5 class="display-5">You are viewing all supervisors.</h5>
  <% else %>
    <h5 class="display-5">You are viewing supervisors from <%= current_user.department.name %>.</h5>
  <% end %>
  <br>
  <%= form_for(@supervisor, url: supervisors_path) do |f| %>
    <%= render 'shared/error_messages', obj: @supervisor %>
    <p>Add new supervisor:</p>
    <div class="row">
      <div class="form-group col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "enter supervisor name", 'aria-label': "New supervisor name" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.text_field :netID, class: "form-control", placeholder: "enter supervisor netID", required: true, 'aria-label': "New supervisor netID" %>
      </div>
      <% if is_admin? %>
        <div class="form-group col-md-12">
          <%= f.select :department_id, @departments_list, {prompt: "Select Department:"}, {class: "form-control", 'aria-label': "New supervisor department"} %>
        </div>
      <% else %>
        <%= f.hidden_field :department_id, value: current_user.department.id %>
      <% end %>
    </div>
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class='fas fa-plus' style='font-size:79%'></i>&nbsp; Create Supervisor
    <% end %>
    <%= link_to "Batch Import&nbsp; <i class='fas fa-arrow-right' style='font-size:79%'></i>".html_safe, {action: "batch_import"}, {class: "btn btn-secondary"} %>
  <% end %>
  <br>
  <br>
  <table class="table supervisors-table" style="font-size:14px; width:100%">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">NetID</th>
        <% if is_admin? %>
          <th scope="col">Department</th>
        <% end %>
        <th scope="col">Students</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @supervisors.each do |supervisor| %>
        <tr>
          <th scope="row"><%= supervisor.id %></th>
          <td><%= supervisor.name %></td>
          <td><%= supervisor.netID %></td>
          <% if is_admin? %>
            <td><%= supervisor.department.name %></td>
          <% end %>
          <td>
            <div class="col-md-12">
              <% supervisor.students.each do |student| %>
                <div class="row" style="margin-bottom:0.3em;margin-right:5px">
                  <div class="col-lg-5 col-md-6" style="overflow:hidden;">
                    <%= student.netID %>
                  </div>
                  <div class="col-lg-4 col-md-6">
                    <%= student.fyp_year %>
                  </div>
                  <%= form_for @supervisor, :url => {:action => "removeStudent"}, html: {class: "col-md-3"} do |f| %>
                    <%= hidden_field_tag :stu_netID, student.netID %>
                    <%= hidden_field_tag :sup_netID, supervisor.netID %>
                    <%= f.submit "remove", class: "btn btn-sm btn-light", style: "padding-top:0.1em;border-radius:0.5rem" %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </td>
          <td>
            <%= link_to edit_supervisor_path(supervisor.id), method: :get, data: {} do %>
              <button class="btn btn-sm btn-outline-info" style="width:35px" aria-label="Edit Supervisor"><i class="fas fa-user-edit"></i></button>
            <% end %>
            <%= link_to supervisor, method: :delete,
                                    data: { confirm: "Do you want to delete this supervisor?" } do %>
              <button class="btn btn-sm btn-danger" style="width:35px" aria-label="Delete Supervisor"><i class="fas fa-trash"></i></button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
