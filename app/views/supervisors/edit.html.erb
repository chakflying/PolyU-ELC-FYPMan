<% provide(:title, "Edit Supervisor") %>
<div class="container">
  <h2 class="display-2 aheading">Edit Supervisor</h2>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@supervisor, html: {class: "needs-validation", novalidate: true}) do |f| %>
        <%= render 'shared/error_messages', obj: @supervisor %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :netID, "NetID" %>
          <%= f.text_field :netID, class: 'form-control', readonly: true %>
        </div>
        <div class="form-group">
          <%= f.label :department, for: "validation_dp" %>
          <% if is_admin? %>
            <%= f.select :department_id, @departments_list, {include_blank: true}, {class: "custom-select", id: "validation_dp", required: true} %>
            <div class="invalid-feedback">Please select supervisor department.</div>
          <% else %>
            <%= f.select :department_id, @departments_list, {include_blank: true}, {class: "custom-select", id: "validation_dp", disabled: true} %>
            <%= f.hidden_field :department_id, value: current_user.department.id %>
          <% end %>
        </div>
        <br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to @supervisor, method: :delete, data: { confirm: "Delete this supervisor?" } do %>
          <button class="btn btn-danger" aria-label="Delete Supervisor"><i class="fas fa-trash"></i>&nbsp; Delete</button>
        <% end %>
        <%= link_to "Back", '/supervisors', {class: "btn btn-secondary"} %>
      <% end %>
    </div>
  </div>
</div>
