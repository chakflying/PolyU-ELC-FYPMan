<% provide(:title, "Edit Profile - PolyU FYP Management") %>
<div class="container">
    <h2 class="display-2" style="margin:1em 0 0.5em 0">Edit Profile</h2>

    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="gravatar_edit">
        <%= gravatar_for @user %><br>
        <a href="http://gravatar.com/emails" target="_blank">change Avatar</a>
        </div>
        <br>
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', obj: @user %>

        <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control', readonly: true %>
        </div>

        <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :department %>
        <% if is_admin? %>
        <%= f.select :department_id, @departments_list, {include_blank: true}, {class: "form-control"} %>
        <% else %>
        <%= f.select :department_id, @departments_list, {include_blank: true}, {class: "form-control", disabled: true} %>
        <%= f.hidden_field :department_id, value: current_user.department.id %>
        <% end %>
        </div>

        <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to "Back", :back, {class: "btn btn-secondary"} %>
        <% end %>
    </div>
    </div>
</div>