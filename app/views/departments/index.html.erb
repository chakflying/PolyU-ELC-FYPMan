<% provide(:title, 'Manage Departments') %>
<div class="container">
  <h2 class="display-2" style="margin:1em 0 0.4em 0">Manage Departments</h2>
  <br>
  <%= form_for(@department, url: departments_path) do |f| %>
    <%= render 'shared/error_messages', obj: @department %>
    <p>Add new Department:</p>
    <div class="row">
      <div class="form-group col-md-8">
        <%= f.text_field :name, class: "form-control", placeholder: "enter department name", 'aria-label': "New department name" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.text_field :code, class: "form-control", placeholder: "enter department code", required: true, 'aria-label': "New department code" %>
      </div>
      <div class="form-group col-md-12">
        <%= f.select :faculty_id, @faculties_list, {prompt: "Select Faculty:"}, {class: "form-control", 'aria-label': "New department's faculty"} %>
      </div>
    </div>
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      <i class='fas fa-plus' style='font-size:79%'></i>&nbsp; Create Department
    <% end %>
  <% end %>
  <br>
  <br>
  <table class="table departments-table" style="font-size:14px; width:100%">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">code</th>
        <th scope="col">Sync ID</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <tr>
          <th scope="row"><%= department.id %></th>
          <td><%= department.name %></td>
          <td><%= department.code %></td>
          <td><%= department.sync_id %></td>
          <td>
            <%= link_to edit_department_path(department.id), method: :get, data: {} do %>
              <button class="btn btn-sm btn-outline-info dt-btn" aria-label="Edit Department"><i class="fas fa-edit"></i></button>
            <% end %>
            <%= link_to department, method: :delete,
                                  data: { confirm: "Do you want to delete this department?" } do %>
              <button class="btn btn-sm btn-danger dt-btn" aria-label="Delete Department"><i class="fas fa-trash"></i></button>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
