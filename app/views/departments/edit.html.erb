<% provide(:title, "Edit Department") %>
<div class="container">
  <h2 class="display-2 aheading">Edit Department</h2>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@department, html: {class: "needs-validation", novalidate: true}) do |f| %>
        <%= render 'shared/error_messages', obj: @department %>
        <%= f.hidden_field :sync_id, value: @department.sync_id %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', required: true %>
          <div class="invalid-feedback">Please enter department name.</div>
        </div>
        <div class="form-group">
          <%= f.label :code %>
          <%= f.text_field :code, class: 'form-control', required: true %>
          <div class="invalid-feedback">Please enter department code.</div>
        </div>
        <div class="form-group">
          <%= f.label :faculty %>
          <%= f.select :faculty_id, @faculties_list, {include_blank: true}, {required: true, class: "custom-select"} %>
          <div class="invalid-feedback">Please select department faculty.</div>
        </div>
        <br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to "Back", departments_path, {class: "btn btn-secondary"} %>
      <% end %>
    </div>
  </div>
</div>
