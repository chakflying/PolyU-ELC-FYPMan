<% provide(:title, "Edit Department") %>
<div class="container">
    <h2 class="display-2" style="margin:1em 0 0.5em 0">Edit Department</h2>

    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@department) do |f| %>
        <%= render 'shared/error_messages', obj: @department %>

        <%= f.hidden_field :sync_id, value: @department.sync_id %>
        <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :code, "NetID" %>
        <%= f.text_field :code, class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :faculty %>
        <%= f.select :faculty_id, @faculties_list, {include_blank: true}, {class: "form-control"} %>
        </div>

        <br>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <%= link_to "Back", departments_path, {class: "btn btn-secondary"} %>
        <% end %>
    </div>
    </div>
</div>